<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quella.schedulemeetings"
    android:versionCode="1"
    android:versionName="1.0"
    >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.quella.schedulemeetings.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.quella.schedulemeetings.CalendarSelection"
            android:label="@string/title_activity_calendar_selection" >
        </activity>
        <activity
            android:name="com.quella.schedulemeetings.SelectDomain"
            android:label="@string/title_activity_select_domain" >
        </activity>
        <activity
            android:name="com.quella.schedulemeetings.SelectMeetings"
            android:label="@string/title_activity_select_meetings" >
        </activity>
        <activity
            android:name="com.quella.schedulemeetings.CreateEvents"
            android:label="@string/title_activity_create_events" >
        </activity>
    </application>

</manifest>
